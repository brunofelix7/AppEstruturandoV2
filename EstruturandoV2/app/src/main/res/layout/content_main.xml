<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.estruturando.estruturandov2.MainActivity">

    <LinearLayout
        android:id="@+id/id_layout0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/titulo"
            android:textSize="22sp"
            android:textColor="#313131"/>

        <TextView
            android:id="@+id/id_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descricao"
            android:textSize="16sp"
            android:textColor="#313131" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_weight="1"
            android:text="1. Vetores"
            android:textSize="16sp"
            android:textColor="#313131"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/button_vetor"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:text="ABRIR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_weight="1"
            android:text="2. Lista sequencial"
            android:textSize="16sp"
            android:textColor="#313131"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/button_lista"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:text="ABRIR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_weight="1"
            android:text="3. Pilha sequencial"
            android:textSize="16sp"
            android:textColor="#313131"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/button_pilha"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:text="ABRIR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_weight="1"
            android:text="4. Fila sequencial"
            android:textSize="16sp"
            android:textColor="#313131"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/button_fila"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:text="ABRIR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_weight="1"
            android:text="5. Árvore binária"
            android:textSize="16sp"
            android:textColor="#313131"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/button_arvore"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:text="ABRIR"/>

    </LinearLayout>

    </LinearLayout>



</LinearLayout>
